{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-unused-vars": [
            "error", { 
                "vars": "all", 
                "args": "after-used", 
                "ignoreRestSiblings": false 
            }
        ],
        "no-async-promise-executor": "error"
    }
}
